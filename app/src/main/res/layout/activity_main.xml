<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.imtiazaminsajid.alarmclock.MainActivity">


    <TimePicker
        android:id="@+id/alarm_timePicker"
        android:layout_width="353dp"
        android:layout_height="338dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/alarm_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/alarm_timePicker"
        android:layout_alignStart="@+id/alarm_timePicker"
        android:layout_below="@+id/alarm_timePicker"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:text="Alarm On"
        android:textColor="#3145c7"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="362dp" />

    <Button
        android:id="@+id/alarm_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/alarm_timePicker"
        android:layout_alignRight="@+id/alarm_timePicker"
        android:layout_below="@+id/alarm_timePicker"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:text="Alarm Off"
        android:textColor="#3145c7"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="222dp"
        tools:layout_editor_absoluteY="362dp" />

    <TextView

        android:id="@+id/update_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/alarm_off"
        android:layout_alignRight="@+id/alarm_off"
        android:layout_below="@+id/alarm_on"
        android:layout_marginEnd="52dp"
        android:layout_marginRight="52dp"
        android:layout_marginTop="15dp"
        android:text="Alarm Set on"
        android:textColor="#fc0e4d"
        android:textSize="35dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="91dp"
        tools:layout_editor_absoluteY="429dp"
        />


</RelativeLayout>
